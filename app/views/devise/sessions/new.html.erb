<%= content_for :content do %>
  <h2>Login</h2>
  <% if flash[:alert] %>
    <p class="flash_alert"><%= flash[:alert] %>
  <% end %>

  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="inputs">
      <%= f.input :email, :required => false, :autofocus => true %>
      <%= f.input :password, :required => false %>
      <%= f.input :remember_me, :label => 'Mantenha-me conectado', :as => :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="actions">
      <div class="links">
        <%= render :partial => "devise/shared/links" %>
      </div>
      <p class="buttom"><%= f.button :submit, 'Entrar' %></p>
    </div>
  <% end %>

<% end %>
